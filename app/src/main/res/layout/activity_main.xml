<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aohanyao.transformer.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="horizontalBottomCard"
            android:text="HorizontalBottomCard(水平底部卡片)"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="horizontalBottomScaleCard"
            android:text="HorizontalBottomScaleCard(水平底部卡片+旋转)"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="horizontalTopCard"
            android:text="HorizontalTopCard(水平顶部卡片)"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="horizontalTopScaleCard"
            android:text="HorizontalTopScaleCard(水平顶部卡片+旋转)"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="horizontalLeftCard"
            android:text="HorizontalLeftCard(水平左边卡片)"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="horizontalLeftTop"
            android:text="HorizontalLeftTop(水平左边+左上+旋转卡片)"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="horizontalRightCard"
            android:text="HorizontalRightCard(水平右边卡片)"/>
    </LinearLayout>

</ScrollView>
